<div class="rowSpacingBottom" style="color: white;">
    <div class="container-fluid d-flex justify-content-center " name="tabtable" style="margin-left: 20px;margin-top: 40px;">
        <ul class="nav nav-pills nav-stacked  " >          
            <% 
            let daysRequired = 5;
            var date = new Date();
            date.setDate(date.getDate()-1);
            var weekday = new Array(7);
            weekday[0] = "Chủ Nhật";
            weekday[1] = "Thứ hai";
            weekday[2] = "Thứ ba";
            weekday[3] = "Thứ tư";
            weekday[4] = "Thứ năm";
            weekday[5] = "Thứ sáu";
            weekday[6] = "Thứ bảy"; %>

            <% for(let i = 0; i <= daysRequired; i++) {
                date.setDate(date.getDate()+1);
            %>
            <% if(i ==0){ %>
            <li class="active" >
                <% }else{ %>
                    <li class="" >
                    <%}%>
                <a class="list-group-item ml-1"  href="#tab_<%=i%>" data-toggle="tab" style="height: 85px;font-size: 20px;border: 3px solid rgb(250, 250, 250);
                    border-radius: 15px;">

                    <%=   "  "+ i ==0 ? 'Hôm nay' : weekday[date.getDay()]%>
                    <br><strong>
                        <%=  " "+date.getDate()+" tháng "+(date.getMonth()+1) %>
                        </strong>
                </a>
            </li>
            <%} %>

        </ul>
    </div>
    <div class="container-fluid d-flex justify-content-center " name="tabtable" style="margin-left: 20px;margin-top: 40px;">
   
        
        
          
        <!-- Synopsis column -->
        
            
        <div class="tab-content" >
            <%  var len= valuedate.length;
               
                for (var i=0; i< len;i++){ 
                    if(i==0){ %>
                        <div class="tab-pane active" id="tab_<%=i%>">  
                    <% }else{  %>
                        <div class="tab-pane" id="tab_<%=i%>">
                    <%}%>
           
               
                    <%  var arrRap = [];
                    var arrnoidung = [];
                    var arrid = [];
                    var arrimage = [];
                    var arrdate = [];
                    for(var j = 0; j < valuedate[i].length; j++){
                        var flag = 1;
                        for(var k = 0; k < arrRap.length; k++){
                            if(arrRap[k] == valuedate[i][j].phim.ten){
                                flag = 0;
                                break;
                            }
                        }
                        if(flag == 1){
                            arrRap.push(valuedate[i][j].phim.ten);
                            arrnoidung.push(valuedate[i][j].phim.chitiet);
                            arrid.push(valuedate[i][j].phim.id);
                            arrimage.push(valuedate[i][j].phim.image2);
                            arrdate.push(valuedate[i][j].phim.ngaycongchieu)
                        }
                    }
                    for(var j = 0; j < arrRap.length; j++){ %>
                <div class="gridRow showtimesRow active">
                    <div class="gridCol-l-3 gridCol-m-3 gridCol-s-12">
                        <a href="/film-info/showcase-cinema-de-lux-legacy-place/bookworm" class="filmPosterLink">
                            <img src="/img/phims/<%= arrimage[j] %>" alt="BOOKWORM" title="BOOKWORM" class="filmPoster">
                        </a>
                    </div>
                    <div class="gridCol-l-9 gridCol-m-9 gridCol-s-12">
                        <h2 class="filmTitle">
                            <a href="/film-info/showcase-cinema-de-lux-legacy-place/bookworm"><%= arrRap[j]%></a></h2>
                            <div class="sessions fc showtitle" data-sessions="true" data-sessions-date="2021-07-07">
                                <div>
                                    <div class="sessionAttributesGroup">
                                        <div class="sessionAttributesTitle">
                                            <h4><b>Loại Rạp:</b> 2D</h4>
                                           
                                        </div>
                                        <div class="sessionAttributesTitle">
                                            <h4><b>Ngày Chiếu: </b><%= arrdate[j]%></h4>
                                            
                                        </div>
                                        <div class="filmTeaser">
                                            <h3>Nội dung</h3>
                                            <p>
                                                <%= arrnoidung[j]%>
                                            </p>
                                        </div>
                                        <div>
                                            <% valuedate[i].forEach(function(item, index){ %>
                                                <% if(item.phim.ten == arrRap[j]){ %>
                                            <a href="/cumrap/chitiet/<%= arrid[j] %>/sc/<%= item.id %>/marap/<%= item.rapId %>/ngay/<%= item.ngaychieu %>/gio/<%= item.batdau %>/phong/<%= item.maphong %>" title="Wednesday, July 07 at 10:05 AM" aria-label="10:05 AM, Wednesday, July 07 - BOOKWORM" class="session session-link btn-outline">
                                                <%= item.batdau %>
                                            </a>
                                            <%}});%>
                                        </div>
                                    </div>
                                </div>
                            </div>   
                        </div>
                    </div>
                              
                    <% 
                } %>
                   

            </div>
            <% }%>
        </div>
        <!-- ketthua -->
    </div>
</div>
       

        function KiemTra() {
            var ten = document.getElementById("txtTen");
            var err = document.getElementById("errTen");
            if (ten.value.length == 0) {
                err.innerHTML = "Tên sản không được rỗng";
                ten.focus();
                return false;
            } else {
                err.innerHTML = "";
            }
